      "post": {
        "tags": ["chat"],
        "summary": "Get chat response",
        "description": "Get chat response based on user input",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Chat details",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "user_id": {
                  "type": "string"
