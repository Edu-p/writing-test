      "post": {
        "tags": ["conversation"],
        "summary": "Get conversation",
        "description": "Get conversation based on type of test",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Conversation details",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
