{
  "swagger": "2.0",
  "info": {
    "description": "This is the API documentation for the Chat API.",
    "version": "1.0.0",
    "title": "Chat API"
  },
  "host": "localhost:5000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/auth": {
      "post": {
        "summary": "Authenticate user",
        "description": "Authenticate user with email and password",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User credentials",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User authenticated",
            "schema": {
              "type": "object",
              "properties": {
                "user_id": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Invalid credentials",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/explanations": {
      "post": {
        "summary": "Get explanation for a test type",
        "description": "Retrieve explanation based on the type of test",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Test type",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Explanation found",
            "schema": {
              "type": "object",
              "properties": {
                "explanation": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Type of test not found",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/chat": {
      "post": {
        "summary": "Get chat response",
        "description": "Get a response from the chat based on user input",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Chat details",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "user_id": {
                  "type": "string"
                },
                "thread_id": {
                  "type": "string"
                },
                "content": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Chat response",
            "schema": {
              "type": "object",
              "properties": {
                "response": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/get_conversation": {
      "post": {
        "summary": "Get conversation thread",
        "description": "Start a new conversation thread based on the type of test",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Conversation details",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "user_id": {
                  "type": "string"
                },
                "type_of_test": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Conversation thread created",
            "schema": {
              "type": "object",
              "properties": {
                "thread_id": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Type of test not found",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/get_english_level": {
      "post": {
        "summary": "Get English level",
        "description": "Compute or retrieve the English level of a user",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User and thread details",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "user_id": {
                  "type": "string"
                },
                "thread_id": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "English level retrieved",
            "schema": {
              "type": "object",
              "properties": {
                "level": {
                  "type": "integer"
                },
                "CEPR": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Failed to extract JSON from response",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/max_english_level": {
      "post": {
        "summary": "Get maximum English level",
        "description": "Retrieve the maximum English level of a user",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User details",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "user_id": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Maximum English level retrieved",
            "schema": {
              "type": "integer"
            }
          }
        }
      }
    }
  }
}